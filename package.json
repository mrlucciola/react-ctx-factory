{
  "name": "react-ctx-factory",
  "version": "0.1.0",
  "description": "Typed factory to create React Context providers and hooks with field-level selectors",
  "author": {
    "name": "Rocco Lucciola",
    "url": "https://github.com/mrlucciola"
  },
  "homepage": "https://github.com/mrlucciola/react-ctx-factory",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrlucciola/react-ctx-factory.git"
  },
  "bugs": {
    "url": "https://github.com/mrlucciola/react-ctx-factory/issues"
  },
  "keywords": [
    "react",
    "context",
    "hook",
    "selector",
    "typescript",
    "factory",
    "state-management"
  ],
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.16",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "NODE_ENV=local vite",
    "build": "bun build src/index.tsx --outdir dist",
    "prepare": "bun run build",
    "typecheck": "tsc --diagnostics --incremental --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "bun test"
  }
}
