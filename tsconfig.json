{
  "compilerOptions": {
    "target": "ESNext", // @note testing ESNext
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext" // @note testing ESNext
    ],
    "module": "ESNext", // @note testing ESNext
    "moduleDetection": "force", // @note testing
    "allowJs": true, // @note testing
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true, // @note testing
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // mui
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    // custom
    "incremental": true,
    "types": [
      "bun-types",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "baseUrl": ".",
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "*.ts",
    "*.tsx",
    "src/types/jest-dom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*hidden*",
    "**/*local*",
    "**/dist/",
    "**/*.tsbuildinfo",
    "**/*.test.*",
    "**/vitest.*",
    "**/tests",
  ]
}